@model Category
@section title {
    @if (Model != null)
    {
        <h3>Category: @Model.Name</h3>
    }
}

@* Below is the usual way but there is a simpler way using tag helper *@
@* <form method="post" action="/categories/edit"></form> *@
@if (Model != null)
{
    <partial name="_category" model="@Model" />
}
